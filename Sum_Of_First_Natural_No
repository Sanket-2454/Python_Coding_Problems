num = int(input("Enter the number"))
sum = 0

for i in range(num+1):
  sum = sum + i
print(sum)

# by using the formula
num = int(input("Enter the number"))
sum = int((num*(num+1))/2)
print(sum)

# by using the recurssion
def recursum(number):
  if number == 0:
    return number
  return number + recursum(number-1)

number = int(input("Enter the number:"))
print(recursum(number))
